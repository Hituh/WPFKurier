<Window x:Class="CourierApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zarządzanie przesyłkami" Height="400" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Background="#2D3142" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Zarządzanie przesyłkami" FontSize="28" Foreground="White" />
                <Menu Grid.Column="1">
                    <MenuItem Header="Menu" FontSize="26">
                        <MenuItem Header="Nadaj przesyłkę" Click="NadajPrzesylke_Click" FontSize="16"/>
                        <MenuItem Header="Modyfikuj dane" Click="ModyfikujDane_Click" FontSize="16"/>
                    </MenuItem>
                </Menu>
            </Grid>
        </Border>


        <!-- Treść -->
        <StackPanel Grid.Row="1" Margin="10">
            <!-- Dodaj kontrolki do wprowadzania danych nadawcy/odbiorcy itp. -->
        </StackPanel>
    </Grid>
</Window>

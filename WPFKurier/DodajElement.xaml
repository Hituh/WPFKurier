<Window x:Class="CourierApp.DodajElement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourierApp"
        mc:Ignorable="d"
        Title="DodajElement" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel Margin="10">
            <Label Name="lTitle" Content="Dodaj element" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />
            <Label Name="lElementName" Content="Nazwap"></Label>
            <TextBox x:Name="tbElementName" Width="200" Margin="0,0,0,10" />
            <Label Name="lElementSecondary" Content="Nazwas"></Label>
            <TextBox x:Name="tbElementSecondary" Width="200" Margin="0,0,0,10" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Content="Cancel" Width="80" Margin="0 0 10 0" Click="CancelButton_Click" />
                <Button Content="Save" Width="80" Margin="10 0 0 0" Click="SaveButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
